{
  "extends": [
    "airbnb",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true
  },
  "plugins": [
    "import",
    "jsx-a11y",
    "react"
  ],
  "globals": {
    "app": true
  },
  "rules": {
    "no-unused-vars": ["error", { "varsIgnorePattern": "^h$" }],
    "react/jsx-filename-extension": "off",
    "react/react-in-jsx-scope": "off",
    "semi": ["warn", "never"],
    "semi-style": ["warn", "first"]
  },
  "settings": {
    "react": { "createClass": "h", "pragma": "Preact" }
  }
}
